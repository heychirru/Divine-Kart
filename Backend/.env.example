# Environment Configuration
NODE_ENV=development
PORT=3000

# Database
MONGO_URI=mongodb://localhost:27017/divineKart

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT/Auth
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
SECRET_KEY_ACCESS_TOKEN=your_access_token_secret_min_32_chars
SECRET_KEY_REFRESH_TOKEN=your_refresh_token_secret_min_32_chars

# Payment Gateways
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# Stripe (Legacy - kept for backward compatibility)
STRIPE_SECRET_KEY=your_stripe_secret_key

# Email Service (Resend)
RESEND_API=your_resend_api_key

# Image Upload (Cloudinary)
CLODINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLODINARY_API_KEY=your_cloudinary_api_key
CLODINARY_API_SECRET_KEY=your_cloudinary_api_secret

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Session Configuration
SESSION_SECRET=your_session_secret_key_here_min_32_chars

# API Configuration
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# File Upload Limits
MAX_FILE_SIZE=5242880

# Logging
LOG_LEVEL=info
