{
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "prefer-const": "warn",
    "no-var": "error"
  },
  "overrides": [
    {
      "files": ["tests/**/*.js"],
      "env": {
        "jest": true
      },
      "globals": {
        "describe": "readonly",
        "test": "readonly",
        "beforeEach": "readonly",
        "afterEach": "readonly",
        "afterAll": "readonly",
        "expect": "readonly",
        "jest": "readonly"
      },
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}
